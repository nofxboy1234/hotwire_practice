<p style="color: green"><%= notice %></p>

<h1>Cats</h1>

<div id="cats">
  <% @cats.each do |cat| %>
    <%= render cat %>
    <p>
      <%= link_to "Show this cat", cat %>
    </p>
  <% end %>
</div>

<%= link_to "New cat", new_cat_path %><br><br>

<% @cats.each do |cat| %>
  <%= turbo_frame_tag cat do %>
    <%= cat.name %>
  <% end %>
  
<% end %>
